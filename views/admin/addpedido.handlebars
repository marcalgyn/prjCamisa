{{#each erros}}
<div class="alert alert-danger"> {{text}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-header">
        <h4>Dados Pedido: </h4>
    </div>
    <div class="card-body">
        <form action="/admin/pedidos/nova" method="POST">
            <div class="form-row">
                
                <div class="col">
                    <label for="nome">Nome:</label>
                    <input type="test" name="name" class="form-control ">
                </div>

                <div class="col">
                    <div class="form-group col-md-4">
                        <label for="tamanho">Tamanho:</label>
                        <select id="tamanho" class="form-control">
                            <option selected>P</option>
                            <option>M</option>
                            <option>G</option>
                            <option>GG</option>
                            <option>XGG</option>
                        </select>
                    </div>
                </div>

                <div class="col">
                    <label for="familia">Familia</label>
                    <select name="familia" class="custom-select">
                        {{#each familias}}
                        <option value="{{_id}}">{{nome}}</option>
                        {{else}}
                        <option value="0">Nenhuma Familia registrada</option>
                        {{/each}}
                    </select>

                </div>

            </div>

            
            <button class="btn btn-success mt-4" type="submit">Gravar Pedido</button>
        </form>
    </div>

</div>