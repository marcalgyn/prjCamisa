<div class="card h-50 d-inline-block">
    <div class="card-header">
        <h5>Dados Pedido: </h5>
    </div>
    <div class="card-body">
        <form action="/pedidos/edit" method="POST">
        
         <input type="hidden" name="id" value="{{this.pedido._id}}"> 
            
            <div class="form-row">
                <div class="col">
                    <label for="nome">Nome:</label>
                    <input type="text" name="nome" class="form-control " value="{{pedido.nome}}" >
                </div>

                <div class="col">
                    <div class="form-group">
                        <label for="tamanho">Tamanho:</label>
                        <select name="tamanho" id="tamanho" class="form-control" >
                            <option selected>{{pedido.tamanho}} </option>
                            <option>P</option>
                            <option>M</option>
                            <option>G</option>
                            <option>GG</option>
                            <option>XGG</option>
                            <option>------</option>
                            <option>B. Look P</option>
                            <option>B. Look M</option>
                            <option>B. Look G</option>
                            <option>B. Look GG</option>
                        </select>
                    </div>
                </div>

                <div class="col">
                    <label for="familia">Familia</label>
                    
               
                    <select name="familia" class="custom-select"  > <!---->
                        <option value="{{pedido.familia._id}}">{{pedido.familia.nome}}</option>
                        {{#each familia}}
                            <option value="{{_id}}">{{nome}}</option>
                        {{else}}
                            <option value="{{familia.nome}}">Nenhuma Familia registrada</option>
                        {{/each}}
                    </select>
        

                </div>

            </div>
      

            <button class="btn btn-success mt-4" type="submit">Gravar Pedido</button>
        </form>
    </div>

</div>